<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_list_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abnd.mdiaz.popularmovies.MainActivity">

    <TextView
        android:id="@+id/txt_no_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/no_internet"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_no_favs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:text="The Favorite Movies list is empty. Add Movies to your favorites using the menu option on the top right."
        android:visibility="gone" />

</FrameLayout>
